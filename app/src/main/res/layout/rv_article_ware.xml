<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#2C71A8">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/storageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del articulo"
                android:textSize="25dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/menu"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="⋮"
                android:textSize="30dp"
                android:layout_gravity="right|top"
                />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/DescriptionStorage"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxLength="85"
                android:text="Descripcion: esto es una prueba de que todo funciona como debe"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/StockMin"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="20"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="25dp"
                    android:textAlignment="gravity"
                    android:maxLength="2"
                    android:tooltipText="Mínimo de elementos que puede haber en stock"
                    />
                <TextView
                    android:id="@+id/StockMax"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="20"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="25dp"
                    android:textAlignment="gravity"
                    android:tooltipText="Máximo de elementos que puede haber en stock"
                    />

                <TextView
                    android:id="@+id/Stock"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="25dp"
                    android:text="20"
                    android:textAlignment="gravity"
                    android:textSize="15sp"
                    android:tooltipText="Número de elementos que hay ahora en stock" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>