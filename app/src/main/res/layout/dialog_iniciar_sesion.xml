<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:id="@+id/NombreDeUsuario"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase単a"
        android:inputType="textPassword"
        android:id="@+id/Contrasenna"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repetir Contrase単a"
        android:id="@+id/ContrasennaBis"
        android:inputType="textPassword"
        android:layout_marginVertical="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Establecer cumplea単os"
        android:id="@+id/Cumple"
        android:layout_marginVertical="10dp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多Quieres poder acceder con la huella?"
        android:id="@+id/Biometria"
        android:layout_marginVertical="10dp"/>


</LinearLayout>